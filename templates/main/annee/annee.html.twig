{% extends 'base.html.twig' %}

{% block title %}{{departement}} {{annee}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>The syllabus of {{annee}} du {{departement}}</h1>

    
        {% for key,value in modules %}
            <h2> {{key}}</h2>
            <ul>
                {% for module in value %}
                    <li><a href="{{path('matiere',{annee:annee,departement:departement,semestre:key,module:module})}}">{{module}} </a> </li>
                {% endfor%}
            </ul>
        {% endfor %}
    
</div>
{% endblock %}
